#include <assert.h>
#include <stdio.h>

#include <libcork/core.h>

#include "swanson/kernel.h"
#include "swanson/metamodel.h"
#include "swanson/helpers/metamodel.h"


_static_op_(swan_size, print)
{
    assert(param_count == 1);
    size_t  *self = params[0].content;
    printf("%zu\n", *self);
    return 0;
}

_get_operation_(swan_size__base)
{
    get_static_op("print", swan_size, print);
    return NULL;
}

_extern_opset_(swan_size__static)
{
    try_get_operation(swan_size__base);
    try_get_operation(swan_static);
    return NULL;
}


#define builtin_sizes(_) \
    _(int8, int8_t) \
    _(int16, int16_t) \
    _(int32, int32_t) \
    _(int64, int64_t) \
    _(char, char) \
    _(short, short) \
    _(int, int) \
    _(long, long) \
    _(pointer, void *) \
    _(size, size_t) \

#define sizeof_op(name, c_type) \
static const size_t  swan_kernel_sizeof__##name = sizeof(c_type); \
_constant_op_(swan_kernel_sizeof, name, \
              &swan_size__static__opset, \
              (size_t *) &swan_kernel_sizeof__##name); \

builtin_sizes(sizeof_op);
#undef sizeof_op

_static_opset_(swan_kernel_sizeof)
{
#define sizeof_get(name, c_type) \
    get_static_op(#name, swan_kernel_sizeof, name);
    builtin_sizes(sizeof_get);
#undef sizeof_get
    return NULL;
}
